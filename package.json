{
  "name": "pptx-glimpse",
  "version": "0.1.1",
  "description": "A TypeScript library to render PPTX slides as SVG / PNG",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "bench": "vitest bench",
    "lint": "eslint src/ vrt/ scripts/ bench/",
    "lint:fix": "eslint src/ vrt/ scripts/ bench/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'vrt/**/*.ts' 'scripts/**/*.ts' 'bench/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'vrt/**/*.ts' 'scripts/**/*.ts' 'bench/**/*.ts'",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "render": "tsx scripts/test-render.ts",
    "inspect": "tsx scripts/inspect-pptx.ts",
    "vrt:internal:fixtures": "tsx vrt/internal/create-fixtures.ts",
    "vrt:internal:update": "tsx vrt/internal/update-snapshots.ts",
    "vrt:lo:docker-build": "docker build -t pptx-glimpse-vrt docker/libreoffice-vrt",
    "vrt:lo:fixtures": "docker run --rm -v \"$(pwd)\":/workspace pptx-glimpse-vrt python3 /workspace/vrt/libreoffice/create_fixtures.py",
    "vrt:lo:snapshots": "docker run --rm -v \"$(pwd)\":/workspace pptx-glimpse-vrt bash /workspace/vrt/libreoffice/update_snapshots.sh",
    "vrt:lo:update": "npm run vrt:lo:docker-build && npm run vrt:lo:fixtures && npm run vrt:lo:snapshots",
    "test:package": "npm run build && bash scripts/test-package.sh",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "pptx",
    "powerpoint",
    "svg",
    "png",
    "converter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hirokisakabe/pptx-glimpse.git"
  },
  "homepage": "https://github.com/hirokisakabe/pptx-glimpse",
  "bugs": {
    "url": "https://github.com/hirokisakabe/pptx-glimpse/issues"
  },
  "author": "hirokisakabe",
  "license": "MIT",
  "dependencies": {
    "fast-xml-parser": "^4.5.0",
    "jszip": "^3.10.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "opentype.js": "^1.3.4",
    "pixelmatch": "^7.1.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.0"
  }
}
